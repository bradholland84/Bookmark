<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current Title"
        android:id="@+id/current_title"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <org.eazegraph.lib.charts.BarChart
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/current_title_chart"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:padding="5dp"
        android:layout_below="@id/current_title"
        app:egFixedBarWidth="true"
        app:egVisibleBars="6"
        app:egBarWidth="24dp"
        app:egLegendHeight="30dp"
        app:egEnableScroll="false"
        app:egShowDecimal="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="All Books"
        android:id="@+id/overall_titles_text"
        android:padding="8dp"
        android:layout_below="@id/current_title_chart"
        android:layout_centerHorizontal="true" />

    <org.eazegraph.lib.charts.BarChart
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/all_books_chart"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:padding="10dp"
        android:layout_below="@id/overall_titles_text"
        app:egFixedBarWidth="true"
        app:egBarWidth="20dp"
        app:egLegendHeight="30dp"/>

</RelativeLayout>
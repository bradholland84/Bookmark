<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1" android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/current_title"
        android:padding="8dp"
        android:layout_gravity="center_horizontal" />

    <org.eazegraph.lib.charts.BarChart
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/current_title_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_weight="0.5"
        app:egFixedBarWidth="true"
        app:egVisibleBars="6"
        app:egBarWidth="24dp"
        app:egLegendHeight="30dp"
        app:egEnableScroll="false"
        app:egShowDecimal="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="All Books"
        android:id="@+id/overall_titles_text"
        android:padding="8dp"
        android:layout_gravity="center_horizontal" />

    <org.eazegraph.lib.charts.BarChart
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/all_books_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:egVisibleBars="6"
        android:layout_weight="0.5"
        app:egFixedBarWidth="true"
        app:egBarWidth="24dp"
        app:egEnableScroll="false"
        app:egLegendHeight="30dp"/>


</LinearLayout>